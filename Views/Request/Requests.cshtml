@model IEnumerable<Request>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="d-flex flex-row justify-content-between mb-4">
    <span class="d-inline"><h2>All Requests</h2></span>
    @Html.ActionLink("Add Request", "AddRequest", "Request", "",new { @class="btn btn-primary", role="button"})
</div>

<div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Buyer</th>
            <th scope="col">Dealer</th>
            <th scope="col">Car</th>
            <th scope="col">Data</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var request in this.Model)
        {
            <tr>
                <th scope="row">@request.Id</th>
                <td>@request.BuyerId</td>
                <td>@request.DealerId</td>
                <td>@request.CarId</td>
                <td>@request.DateBuy.ToString()</td>
            </tr>
        }
        </tbody>
    </table>
</div>