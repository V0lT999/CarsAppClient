@model IEnumerable<Buyer>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="d-flex flex-row justify-content-between mb-4">
  <span class="d-inline"><h2>All Buyers</h2></span>
    @Html.ActionLink("Add Buyer", "AddBuyer", "Buyer", "",new { @class="btn btn-primary", role="button"})
</div>

<div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Middle name</th>
            <th scope="col">Passport</th>
            <th scope="col">City</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var buyer in this.Model)
        {
            <tr>
                <th scope="row">@buyer.Id</th>
                <td>@buyer.FirstName</td>
                <td>@buyer.LastName</td>
                <td>@buyer.MiddleName</td>
                <td>@buyer.PassportNumber</td>
                <td>@buyer.CityId</td>
            </tr>
        }
        </tbody>
    </table>
</div>